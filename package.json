{
  "name": "currietechnologies-razorclipboard",
  "version": "1.0.0",
  "description": "A Razor Class Library for interacting with the browser clipboard",
  "scripts": {
    "build": "SET NODE_ENV=production && webpack -p --color",
    "build:tsc": "tsc",
    "watch": "webpack --watch",
    "lint": "eslint ./src --ext .ts",
    "prettier:write": "prettier --write ./src/*.ts",
    "prettier:check": "prettier --check ./src/*.ts",
    "babel": "babel ./src/clipboard.ts --out-dir wwwroot --extensions .ts,.tsx"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "prettier": "^1.18.2",
    "terser-webpack-plugin": "^2.1.2",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "browserslist": [
    "chrome 66",
    "firefox 63",
    "opera 53",
    "and_chr 76",
    "and_ff 68",
    "samsung 9.2"
  ],
  "author": "Michael J. Currie"
}

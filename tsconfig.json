{
  "compilerOptions": {
    "outDir": "./wwwroot/",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["es2015", "dom"],
    "allowJs": true
  },
  "include": ["./src/*.ts"]
}
